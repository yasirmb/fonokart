<!-- start product Area -->
<section class="">
	<!-- single product slide -->
	<div class="single-product-slider">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h5>CHOOSE THE DEVICE</h5>
						<h1><span style="font-size: larger; font-weight: 900; "><strong>ANDROID DEVICES</strong></span>
							<h6>Buy. Trending. the newest and trending devices with great offers and less price 
								available in the market.</h6>


						</h1>


					</div>
				</div>

			</div>


			<ul class="nav nav-tabs justify-content-center mb-55" id="myTab" role="tablist">
				<li class="nav-item" role="presentation">
					<button style="color: #ff6f00" class="nav-link active" id="home-tab" data-bs-toggle="tab"
						data-bs-target="#home" type="button" role="tab" aria-selected="true">All DEVICES</button><br>

				</li>

				{{#each categories}}
				<form method="POST" action="/filter-product">
					<li class="nav-item" role="presentation">
						<input type="hidden" name="name" value="{{this.name}}">
						<button style="color: #ff6f00" class="nav-link active" id="profile-tab" type="submit" role="tab"
							aria-selected="true">{{this.name}}</button>

					</li>
				</form>

				{{/each}}

			</ul>







			<div class="row">

				<!-- single product -->
				{{#each product}}
				<div class="col-lg-3 col-md-6">

					<div class="single-product">

						<a href="/product-detail?id={{this._id}}"><img class="img-fluid"
								src="/product-pictures/{{this.image.[0]}}" alt=""></a>
						<div class="product-details">
							<h3 style="color: #ff6f00;">{{this.name}}</h3>
							<h6>{{this.description}}</h6>
							{{!-- <h5>size:{{this.size}}</h5> --}}
							<h5>color:{{this.color}}</h5>


							<div class="price">

								<h6>â‚¹{{this.price}}</h6>

							</div>




							<div class="prd-bottom">


								<a class="social-info" href="/add-to-cart/{{this._id}}">
									<span class="ti-bag"></span>
									<p class="hover-text">Add To Cart</p>
								</a>
								{{!-- <a href="/add-to-wishlist/{{this._id}}" class="social-info">
									<span class="lnr lnr-heart"></span>
									<p class="hover-text">Wishlist</p>
								</a> --}}
								<a href="/add-to-wishlist/{{this._id}}" class="social-info">
									{{#if this.isWishlisted}}
									<span class="fas fa-heart" style="font-size:14px; color:#ff6f00;"></span>
									{{else}}
									<span class="lnr lnr-heart"></span>
									{{/if}}
									<p class="hover-text">Wishlist</p>
								</a>

								{{!-- <a href="" class="social-info">
									<span class="lnr lnr-move"></span>
									<p class="hover-text">view more</p>
								</a> --}}
								<a href="" class="social-info">
									<form action="/click" method="post">
										<input type="text" name="id" value="{{this._id}}" hidden>
										<span class="lnr lnr-move"></span>
										<button type="submit" class="hover-text"
											style="border: none; background:transparent ">View more</button>
									</form>
								</a>
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</div>


			<nav aria-label="Page navigation example">
				<ul class="pagination justify-content-center mb-5">
					<li class="page-item">
						<a class="page-link" href="#" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
						</a>
					</li>
					{{#each pages}}
					<li class="page-item"><a class="page-link" href="/productPagination?id={{this}}"
							aria-label="page {{this}}">{{this}}</a></li>
					{{/each}}
					<li class="page-item">
						<a class="page-link" href="#" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
						</a>
					</li>
				</ul>
			</nav>






		</div>
	</div>
	<!-- single product slide -->

</section>