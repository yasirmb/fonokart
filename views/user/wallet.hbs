<br><br><br><br>

<div class="card mx-auto" style="width: 38rem;">
    <div class="card-body">
        <center>

            <h4 class="mt-2" style="    font-family: auto;  ">My Wallet</h4>
        </center>
        <br>
        <br>
        <div class="d-flex">
            <h6 class="card-subtitle text-muted" style="padding-top: 2rem;padding-right: 1em;padding-left:2em">Availabe
                balance</h6>
            <h2 class="card-title" style="font-family: emoji; font-size: 2.5rem">₹ {{walletData.balance}}</h2>

        </div>

        <hr>
        <br>
        {{#each order}}
        <div class="card" style="background: #e0e0e0; padding-top: 50px;">
            <div class="card-body">
                <h5 class="pt-2">Date : {{this.date}}</h5>
                <h5 class="pt-2">orderId : {{this._id}}</h5>
                <h5 class="pt-2">Amount : ₹{{this.total}}</h5>

                
            </div>
        </div>
        {{/each}}
    </div>
</div>



<style>
    .card {
        margin-top: 50px;
        padding-top: 20px;
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }
