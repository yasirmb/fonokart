	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="img/login2 (2).png"  alt="">
						<div class="hover">
							<h4>New to our website?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
							<a href="/signup"><button type="submit" class="primary-btn">Create an Account</button></a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3 style="color: #ff6f00;" class="title-7">Enter the Mobile Number</h3>
						<span style="color: red;">{{error}}</span>
						<form class="row login_form" action="/send-otp" method="post" id="contactForm" novalidate="novalidate">

							<div class="col-md-12 form-group">
								<input type="textbox" class="form-control" id="mobile" name="mobile" placeholder="mobile number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'mobile number'" onkeyup="validateotp()">
								<span class="text-danger" id="numerror"></span>
							</div>
							
							<div class="col-md-12 form-group">
								<button type="submit" id="numbersubmit" value="submit" class="primary-btn">Submit</button>
								
							</div>

                            <div class="col-md-12 form-group">
                                <a href="/login">Back To Login?</a>
                            </div>
						</form>
					</div>
				</div>
			</div>
		</div>
		</form>
	</section>
	<!--================End Login Box Area =================-->


	<!-- start footer Area -->
	
	<!-- End footer Area -->


	<script>
		function validateotp(){
			const num = document.getElementById("mobile").value
			if(isNaN(num)){
				document.getElementById("numerror").innerHTML = "Enter Number"
				document.getElementById('#numbersubmit').disabled = true
			}
			else{
				document.querySelector('#numbersubmit').disabled = false
			}
		}
	</script>


	
