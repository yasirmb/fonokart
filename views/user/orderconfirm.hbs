<!--================Order Details Area =================-->
	<section class="order_details section_gap">
		<div class="container" style="padding-top: 100PX;">
			<h3 class="title_confirmation">Thank you. Your order has been received.</h3>
			<div class="row order_d_inner">
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Order Info</h4>
						<ul class="list">
							<li><a href="#"><span>Name</span> : {{orderDetails.deliveryDetails.name}}</a></li>
							<li><a href="#"><span>Date</span> : {{orderDetails.date}}</a></li>
							<li><a href="#"><span>Total</span> : ₹ {{orderDetails.total}}</a></li>
							<li><a href="#"><span>Payment method</span> : {{orderDetails.paymentMethod}}</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Billing Address</h4>
						<ul class="list">
							<li><a href="#"><span>HouseNo</span> : {{orderDetails.deliveryDetails.homeNumber}}</a></li>
							<li><a href="#"><span>Town</span> : {{orderDetails.deliveryDetails.Town}}</a></li>
							<li><a href="#"><span>State</span> : {{orderDetails.deliveryDetails.state}}</a></li>
							<li><a href="#"><span>Postcode </span> : {{orderDetails.deliveryDetails.zip}}</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Shipping Address</h4>
						<ul class="list">
							<li><a href="#"><span>HouseNo</span> : {{orderDetails.deliveryDetails.homeNumber}}</a></li>
							<li><a href="#"><span>Town</span> : {{orderDetails.deliveryDetails.Town}} </a></li>
							<li><a href="#"><span>State</span> : {{orderDetails.deliveryDetails.state}}</a></li>
							<li><a href="#"><span>Postcode </span> : {{orderDetails.deliveryDetails.zip}}</a></li>
						</ul>
					</div>
				</div>
			</div>
			<a href="/orderDetails"><button class="btn btn-primary">Go to My Orders</button></a>
			<div class="order_details_table">
				<h2>Order Details</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product</th>
								<th scope="col">Quantity</th>
								<th scope="col">Price</th>
							</tr>
						</thead>
						{{#each productDetails}}
						<tbody>
							<tr>
								<td>
									<p>{{this.product.name}}</p>
								</td>
								<td>
									<h5>{{this.quantity}}</h5>
								</td>
								<td>
									<p>₹ {{this.product.offerPrice}}</p>
								</td>
							</tr>
							{{!-- <tr>
								<td>
									<h4>Subtotal</h4>
								</td>
								<td>
									<h5></h5>
								</td>
								<td>
									<p>$2160.00</p>
								</td>
							</tr> --}}
							
							
						</tbody>
						{{/each}}
					</table>
					<h2 class="text-center mt-5" >Total:₹ {{orderDetails.total}}</h2>
				</div>
			</div>
		</div>
	</section>
	<!--================End Order Details Area =================-->