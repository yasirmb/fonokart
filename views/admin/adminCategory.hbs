<body>

  <!-- ======= Header ======= -->


  <!-- ======= Sidebar ======= -->


  <main id="main" class="main">

    <div class="pagetitle">
      <h1>category Table</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Product Table</li>
        </ol>
      </nav>

  
    <a href="/admin/add-category">
     <button  class="btn btn-success">
    add category
    </button>
    </a>
   

    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"></h5>

              
              <!-- Dark Table -->
              <table class="table table-dark" id="mycategory">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                    
                    
                  </tr>
                </thead>
                <tbody>
                    {{#each getcategory}}
                  <tr>
                    <td></td>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        <form action="/admin/edit-product" method="post">
                            <input type="text" value="{{this._id}}" name="id" id="" hidden>
                            <button class="btn btn-primary" type="submit">Edit</button>
                        </form>
                        
                    </td>
                    {{!-- <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to permanently delete {{this.model}} ?')">Delete</a></td> --}}
                  </tr>

                  {{/each}}
                  
                
                  
                
                </tbody>
              </table>
              <!-- End Dark Table -->

            </div>
          </div>

          

          

          

        </div>

        
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  

  

</body>

</html>


  <script>
  $(document).ready(function () {
    var t = $('#mycategory').DataTable({
      columnDefs: [
        {
          searchable: false,
          orderable: false,
          targets: 0,
        },
      ],
      order: [[1, 'asc']],
    });

    t.on('order.dt search.dt', function () {
      let i = 1;

      t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
        this.data(i++);
      });
    }).draw();
  });
</script>

