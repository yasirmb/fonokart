                    <th scope="col">Action</th>
                    <th scope="col">Action</th>
                    
                  </tr>
                </thead>
                <tbody>
                    {{#each product}}
                  <tr>
                   <td></td>
                    <td>{{this.name}}</td>
                      {{!-- <td>{{this.size}}</td> --}}
                       <td>{{this.categoryid}}</td>
                      <td>{{this.color}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    {{!-- <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 70px; height:auto"> </td> --}}
                     <td><img src="../product-pictures/{{this.image.[0]}}" alt="" style="width: 40px; height: 40px"> </td>
                     
                    <td>
                        <form action="/admin/edit-product" method="post">
                            <input type="text" value="{{this._id}}" name="id" id="" hidden>
                            <button class="btn btn-primary" type="submit">Edit</button>
                        </form>
                        
                    </td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to permanently delete {{this.name}} ?')">Delete</a></td>
                  </tr>

                  {{/each}}
                  
                
                  
                
                </tbody>
              </table>
              <!-- End Dark Table -->

            </div>
          </div>

          

          

          

        </div>

        
      </div>
    </section>

  </main><!-- End #main -->

