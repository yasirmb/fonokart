<div class="">
    <div class=" row md-12">

        <div class="col-md-12 ">





            <main id="main" class="main">

                <div class="pagetitle">
                    <h1>Product Offer Tables</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="">Product</a></li>
                            <li class="breadcrumb-item">Table</li>
                            <li class="breadcrumb-item active"><a href="/product-coupen">Click Here</a></li>
                        </ol>
                    </nav>



                </div><!-- End Page Title -->

                <section class="section">
                    <div class="row" style="margin-right: 0px;margin-left: 0px;">
                        <div class="col-lg-12">

                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Product Table</h5>

                                    <!-- Default Table -->
                                    <table class="table" id="productOffer">
                                        <thead>
                                            <tr>
                                                <th scope="col">Image</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Category</th>
                                                <th scope="col">Discount</th>
                                                <th scope="col">Original Price</th>
                                                <th scope="col">Offer Price</th>
                                                <th scope="col">Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each product}}
                                            <tr>
                                                <td><img src="../product-pictures/{{this.image.[0]}}" alt=""
                                                        style="width: 70px; height:auto"> </td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.categoryid}}</td>
                                                <td>{{this.discount}} % </td>
                                                <td>{{this.price}}</td>
                                                <td>{{this.offerPrice}}</td>
                                                <td>

                                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                        data-bs-target="#example-{{this._id}}" value="{{this._id}}"
                                                        name="id" id="">
                                                        ADD COUPEN
                                                    </button>

                                                </td>
                                            </tr>


                                            {{/each}}


                                        </tbody>
                                    </table>
                                    <!-- End Default Table Example -->
                                </div>
                            </div>









                        </div>


                    </div>
                </section>

            </main><!-- End #main -->




        





            {{!-- {{/each}} --}}
            {{!-- <div><span class="text-danger" style="margin-left: 300px;">{{oferEror}}</span></div> --}}


            <!-- Modal -->
            <div class="modal fade" id="exampleModel" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <form class="col-md-12" action="/admin/addProductOffer" method="post" enctype="">



                                <div class="form-group mt-3">
                                    <label for="exampleInputEmail1">Discount</label>
                                    <input type="number" name="discount" class="form-control bg-white text-black"
                                        id="newPrice" aria-describedby="emailHelp" placeholder="Value">
                                </div>


                                <div class="form-group mt-3">
                                    <label for="exampleInputEmail1">Start Date</label>
                                    <input type="date" name="startdate" class="form-control bg-white text-black"
                                        id="stock" aria-describedby="emailHelp" placeholder="Stock count">
                                </div>

                                <div class="form-group mt-3">
                                    <label for="exampleInputEmail1">Exp Date</label>
                                    <input type="date" name="endingdate" class="form-control bg-white text-black"
                                        id="stock" aria-describedby="emailHelp" placeholder="Stock count">
                                </div>


                                <button type="submit" class="btn btn-primary mt-3">Submit</button>
                            </form>


                        </div>



                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            {{#each product}}

            <div class="modal fade" id="example-{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <form class="col-md-12" action="/admin/addProductOffer/{{this._id}}" method="post"
                                enctype="">



                                <div class="form-group mt-3">
                                    <label for="exampleInputEmail1">Discount</label>
                                    <input type="number" name="discount" class="form-control bg-white text-black"
                                        id="newPrice" aria-describedby="emailHelp" placeholder="Value" required>
                                </div>


                                <div class="form-group mt-3">
                                    <label for="exampleInputEmail1">Start Date</label>
                                    <input type="date" name="startdate" class="form-control bg-white text-black"
                                        id="stock" aria-describedby="emailHelp" placeholder="Stock count" required>
                                </div>

                                <div class="form-group mt-3">
                                    <label for="exampleInputEmail1">Exp Date</label>
                                    <input type="date" name="endingdate" class="form-control bg-white text-black"
                                        id="stock" aria-describedby="emailHelp" placeholder="Stock count" required>
                                </div>


                                <button type="submit" class="btn btn-primary mt-3">Submit</button>
                            </form>


                        </div>



                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}


        </div>
    </div>
</div>

    <script>
                $(document).ready(function () {
                    var t = $('#productoffer').DataTable({
                        columnDefs: [
                            {
                                searchable: false,
                                orderable: false,
                                targets: 0,
                            },
                        ],
                        order: [[1, 'asc']],
                    });

                    t.on('order.dt search.dt', function () {
                        let i = 1;

                        t.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                            this.data(i++);
                        });
                    }).draw();
                });
            </script>
